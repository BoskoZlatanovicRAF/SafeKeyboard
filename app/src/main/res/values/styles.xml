<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Keyboard theme -->
    <style name="KeyboardTheme">
        <item name="android:background">@drawable/keyboard_background</item>
        <item name="android:keyBackground">@drawable/key_background</item>
        <item name="android:keyTextColor">#FFFFFF</item>
        <item name="android:keyTextSize">22sp</item>
        <item name="android:keyPreviewLayout">@layout/key_preview</item>
        <item name="android:keyPreviewOffset">-12dp</item>
        <item name="android:keyPreviewHeight">80dp</item>
        <item name="android:labelTextSize">18sp</item>
        <item name="android:shadowColor">#BB000000</item>
        <item name="android:shadowRadius">2.75</item>
    </style>
</resources>